<style>
	/* Make sure to download this for local access later */
	@import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap');

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		color: #eee6db;
		font-family: Roboto, Arial, Helvetica, sans-serif;
	}
	h1 {
		font-size: 42px;
		font-weight: 800;
		font-style: italic;
	}
	h1 span {
		color: #de3d11;
	}
	p {
		font-size: 19px;
		margin-bottom: 60px;
	}

    input,
    textarea,
    select {
        border: 1px solid transparent;
        outline: none;
        border-radius: 10px;
        padding: 10px;
        margin-top: 15px;
        background: #dddddd;
    }

    input:focus, 
    textarea:focus,
    select:focus {
      outline: none;
      background: #ffffff;
		border-color: #54258a;
      box-shadow: 0 0 5px #54258a;
    }

	button {
      color: #ffffff;
      background-color: #54258a;
      padding: 10px 20px;
      border-radius: 10px;
      text-align: center;
      cursor: pointer;
      border: none;
      outline: 0;
      box-shadow: 0 4px 4px 0 #3c335c4b;
      transition-duration: 300ms;
    }
	button:hover {
		background-color: #de3d11;
	}
	
	.ohon {
		opacity: 0;
		position: absolute;
		top: 0;
		left: 0;
		height: 0;
		width: 0;
		z-index: -1;
	}

	.wrapper {
		width: 100vw;
		height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
		z-index: -1;
	}

	.glitch {
		max-width: 800px;
		width: 100vw;
	}

	.hidden {
		opacity: 0;
	}

	.show {
		opacity: 1;
	}

	#form-submitted {
		transition-duration: 300ms;
		font-size: 12px;
	}

