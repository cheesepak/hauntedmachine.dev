		left: -6vw;
	}
	.diamond4, .diamond3, .diamond2, .diamond1 {
		animation: color-rotate 1s linear infinite;
	}
	@keyframes color-rotate {
		0% {filter: hue-rotate(0deg) blur(8px);}
		100% {filter: hue-rotate(360deg) blur(8px);}
	}
	@keyframes diamond {
		0% { transform: translateY(0vh) scale(0, 1);}
		5% { transform: translateY(5vh) scale(1); }
